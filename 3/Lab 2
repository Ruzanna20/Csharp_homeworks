using System;

class Program2
{
    static void Main()
    {
        Console.WriteLine("Enter the number: (1-4) ");
        int a = int.Parse(Console.ReadLine());

        switch (a)
        {
            case 1:
                Console.WriteLine(a + 1);
                break;
            case 2:
                Console.WriteLine(a - 1);
                break;
            case 3:
                Console.WriteLine(a * 2);
                break;
            case 4:
                Console.WriteLine(a / 2);
                break;
            default:
                Console.WriteLine(a);
                break;
        }
    }
}
